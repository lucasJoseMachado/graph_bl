@graph_bl = angular.module('graph_bl', ['ngRoute', 'ngAnimate', 'toastr', 'ngResource', 'templates', 'angular-loading-bar'])

.config(['$routeProvider', ($routeProvider) ->
  $routeProvider
    .when('/listar_sugestoes', {templateUrl: "user_suggestions/index.html", controller: 'UserSuggestionCtrl'})
    .otherwise({templateUrl: "user_suggestions/new.html", controller: 'NewUserSuggestionCtrl'})
])

.config(['toastrConfig', (toastrConfig) ->
  angular.extend(toastrConfig, positionClass: 'toast-bottom-right')
])
